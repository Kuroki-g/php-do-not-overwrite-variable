{
  "name": "php-do-not-overwrite-variable",
  "displayName": "PHP DO NOT OVERWRITE VARIABLE",
  "author": "Kuroki-g",
  "license": "GPL-3.0",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kuroki-g/php-do-not-overwrite-variable"
  },
  "publisher": "Kuroki-g",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:php"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "php-do-not-overwrite-variable.analyzeActivatedFile",
        "title": "[php-do-not-overwrite-variable] Analyze current activated php file"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "phpDoNotOverwriteVariable.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "phpDoNotOverwriteVariable.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "lint": "npx @biomejs/biome check",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^5.7.2"
  }
}
